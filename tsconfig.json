{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src",
     "paths": {
      "atoms/*": [
        "./features/presentation/components/atoms/*"
      ],
      "modules/*": [
        "./features/presentation/components/modules/*"
      ],
      "organism/*": [
        "./features/presentation/components/organism/*"
      ],
      "templates/*": [
        "./features/presentation/components/templates/*"
      ],
      "screens/*": [
        "./features/presentation/screens/*"
      ],
      "hooks/*": [
        "./features/presentation/hooks/*"
      ],
      "theme/*": [
        "./features/presentation/theme/*"
      ],
      "utils/*": [
        "./features/presentation/utils/*"
      ],
      "api/*": [
        "./features/domain/api/*"
      ],
      "entities/*": [
        "./features/domain/entities/*"
      ]
     }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}